<Window x:Class="factorialLB1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:factorialLB1"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="1200">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="200" Margin="0,0,0,0" Width="1200" VerticalAlignment="Top">
            
            <TextBlock Text="Введите число для вычисления факториала:" FontSize="14" Margin="20, 0, 0, 0" Height="30"/>
            
            <TextBox x:Name="txt_Number" Height="20" Width="100" Margin="10,-8,0,0" FontSize="14"/>
            
            <Button x:Name="btn_Count" Height="25" Width="80" Content="Вычислить" FontSize="12" Margin="10,-8,0,0" Click="btn_Count_Click"/>
            
            <StackPanel Margin="30,0,0,0">

                <TextBlock Text="Результат:" Width="100" Height="30" FontSize="14" Margin="-200,50,0,0"/>
                
                <TextBlock x:Name="txt_Result" Text="" Width="650" Height="30" FontSize="14" Margin="10,0,0,0"/>
                
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
